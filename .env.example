# Configuration AI (OpenAI ou LM Studio)
AI_API_MODE=lmstudio  # Options: 'openai' ou 'lmstudio'
AI_TIMEOUT=60

# Configuration OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-vision-preview

# Configuration LM Studio (compatible avec l'API d'Ollama sur le port 11434)
LMSTUDIO_URL=http://127.0.0.1:11434/v1
LMSTUDIO_MODEL=qwen/qwen2.5-vl-7b

# MQTT (pour Home Assistant)
MQTT_BROKER=192.168.1.100
MQTT_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=votre_mot_de_passe

# Home Assistant
HA_DEVICE_NAME=IAction Camera AI
HA_DEVICE_ID=iaction_camera_ai

# Camera Configuration
# RTSP Camera (optionnel - laissez vide si pas utilisé)
DEFAULT_RTSP_URL=
RTSP_USERNAME=
RTSP_PASSWORD=

# Caméra IP communes (exemples)
# Pour Hikvision: rtsp://username:password@ip:554/Streaming/Channels/101
# Pour Dahua: rtsp://username:password@ip:554/cam/realmonitor?channel=1&subtype=0
# Pour Foscam: rtsp://username:password@ip:554/videoMain
# Pour TP-Link Tapo: rtsp://username:password@ip:554/stream1